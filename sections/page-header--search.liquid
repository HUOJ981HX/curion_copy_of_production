<div class="page-header page-header--search">
    <div class="page-header__content">
        <div class="container">
            {% if search.performed %}
                <h1 class="page-header__title">
                    Search Results for "{{ search.terms }}"
                </h1>
            {% else %}
                <h1 class="page-header__title">
                    {{ 'general.search.title' | t }}
                </h1>
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Page Header - Search",
    "class": "page-section page-section--full-bleed page-section--no-gap"
}
{% endschema %}
