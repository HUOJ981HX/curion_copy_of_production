<div class="container icon-block animate-in">
    {%- if section.settings.subtitle != blank -%}
        <span class="subtitle subtitle--{{ section.settings.subtitle_color | default: 'blue' }}">{{ section.settings.subtitle | escape }}</span>
    {%- endif -%}

    {% if section.settings.icon-block-title != blank %}
        <h2 class="icon-block__header">{{ section.settings.icon-block-title }}</h2>
    {% endif %}

    {% if section.settings.icon-block-description != blank %}
        <div class="icon-block__content">{{ section.settings.icon-block-description }}</div>
    {% endif %}

    <!-- Icon Block HTML  -->
    <div class="icon-block icon-block--default">
        <!-- Icon Item Loop  -->
        {% if section.blocks.size > 0 %}
            <ul class="icon-block__list {% if section.blocks.size > 5 %}icon-block__list--four{% endif %}">
                {% for block in section.blocks %}
                    {% assign icon_title = block.settings.icon-title %}
                    {% assign icon_content = block.settings.icon-content %}
                    {% assign icon_label = block.settings.icon-button-label %}
                    {% assign icon_link = block.settings.icon-button-link %}

                    <li class="icon-block__item animate-in--list-delay {% if section.blocks.size < 5 %}icon-block__item-spaced-out{% endif %}">
                        <div class="icon-block__icon {% if icon_content != blank %}align-top{% endif %}">
                            {% if block.settings.icon-image != blank %}
                                {% render 'responsive-image' with
                                    image: block.settings.icon-image
                                %}
                            {% endif %}
                        </div>
                        <div class="icon-block__content-wrapper">
                            {% if icon_title != blank %}
                                <h6 class="icon-block__title h6">{{ icon_title }}</h6>
                            {% endif %}

                            {% if icon_content != blank %}
                                <div class="icon-block__copy">{{ icon_content }}</div>
                            {% endif %}

                            {% if icon_label != blank and icon_link!= blank %}
                                <a href="{{ icon_link }}" 
                                   class="icon-block__button button button--primary button--text"
                                   {% if icon_link contains 'http://' or icon_link contains 'https://' %}target="_blank"{% endif %}
                                >
                                   {{ icon_label }} <span class="button__icon-wrapper">{% render 'icon', name: 'arrow--cta-short', class: 'button__icon' %}</span>
                                </a>
                            {% endif %}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>

{% schema %}
{
    "name": "Icon Block",
    "class": "page-section page-section--full-bleed page-section--icon-block",
    "settings": [
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle"
        },
        {
            "type": "radio",
            "id": "subtitle_color",
            "label": "Choose the colour for the subtitle.",
            "info" : "Default colour will be blue.",
            "options": [
                { "value": "blue", "label": "Blue" },
                { "value": "coral", "label": "Coral" }
            ]
        },
        {
            "type": "text",
            "id": "icon-block-title",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "icon-block-description",
            "label": "Desciption"
        }
    ],
    "blocks": [
        {
        "type": "icon-item",
        "name": "Icon Item",
        "settings": [
            {
                "type": "image_picker",
                "id": "icon-image",
                "label": "Icon"
            },
            {
                "type": "text",
                "id": "icon-title",
                "label": "Title"
            },
            {
                "type": "richtext",
                "id": "icon-content",
                "label": "Description"
            },
            {
                "type": "text",
                "id": "icon-button-label",
                "label": "Button Label"
            },
            {
                "type": "url",
                "id": "icon-button-link",
                "label": "Button Link"
            }
        ]
        }
    ],
    "presets": [
        {
            "name": "Icon Block",
            "category": "Components"
        }
    ]
}
{% endschema %}
