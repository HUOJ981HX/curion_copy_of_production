<div class="container content-cards">
    {% if section.settings.icon-block-title != blank %}
        <h2 class="content-cards__header">{{ section.settings.icon-block-title }}</h2>
    {% endif %}

     {% if section.settings.icon-block-content != blank %}
        <p class="content-cards__content">{{ section.settings.icon-block-content }}</p>
    {% endif %}

    <!-- Icon Item Loop  -->
    {% if section.blocks.size > 0 %}
        <div class="css-grid css-grid--default css-grid--medium-{{section.blocks.size}} css-grid--content-cards">
            {% for block in section.blocks %}
                <div class="css-grid__item card card--default">
                    {% if block.settings.card-image %}
                        <div class="card__image-wrapper">
                            {% render 'responsive-image' with image: block.settings.card-image, image_class: 'background-image' %}
                        </div>
                    {% endif %}

                    <div class="card__content">
                        {% if block.settings.card-title != blank %}
                            <h3 class="card__title">{{ block.settings.card-title }}</h3>
                        {% endif %}

                        {% if block.settings.card-content != blank %}
                            <p class="card__copy">{{ block.settings.card-content }}</p>
                        {% endif %}

                        {% if block.settings.card-button-label != blank and block.settings.card-button-link != blank %}
                            <a href="{{ block.settings.card-button-link }}" class="card__link button--primary button">{{ block.settings.card-button-label }}</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}


    {% if section.settings.icon-block-button-label != blank and section.settings.icon-block-button-link != blank %}
        <a href="{{ section.settings.icon-block-button-link }}" class="button button--secondary">{{ section.settings.icon-block-button-label }}</a>
    {% endif %}
</div>

{% schema %}
{
    "name": "Content Cards",
    "class": "page-section page-section--full-bleed page-section--content-cards",
    "settings": [
        {
            "type": "text",
            "id": "icon-block-title",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "icon-block-content",
            "label": "Subheading"
        }
    ],
    "blocks": [
        {
        "type": "card",
        "name": "Card",
        "limit": 3,
        "settings": [
            {
                "type": "image_picker",
                "id": "card-image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "card-title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "card-content",
                "label": "Text"
            },
            {
                "type": "text",
                "id": "card-button-label",
                "label": "Button Label"
            },
            {
                "type": "url",
                "id": "card-button-link",
                "label": "Button Link"
            }
        ]
        }
    ]
}
{% endschema %}
