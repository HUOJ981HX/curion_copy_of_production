{% section 'page-header--register' %}

<div class="page-section page-section__register">
    {% form 'create_customer', class:'form form--login' %}
        <input type="hidden" name="return_to" value="/account">
        <div class="form__wrapper">
            {% if form.errors != blank %}
                <div class="form__error-message">
                    {% for field in form.errors %}
                        <div class="form__error">
                            {{ form.errors.messages[field] }}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="form__field form__field--input">
                <label for="FirstName" class="form__label">
                    {{ 'customer.register.first_name' | t }}
                </label>
                <input type="text"
                    class="form__control form__input"
                    name="customer[first_name]"
                    id="FirstName"
                    placeholder="{{ 'customer.register.first_name' | t }}"
                    autofocus
                    {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
                    required>
            </div>
            <div class="form__field form__field--input">
                <label for="LastName" class="form__label">
                    {{ 'customer.register.last_name' | t }}
                </label>
                <input type="text"
                    class="form__control form__input"
                    name="customer[last_name]"
                    id="LastName"
                    placeholder="{{ 'customer.register.last_name' | t }}"
                    {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
                    required>
            </div>
            <div class="form__field form__field--input">
                <label for="Email" class="form__label">
                    {{ 'customer.register.email' | t }}
                </label>
                <input type="email"
                    class="form__control form__input"
                    name="customer[email]"
                    id="Email"
                    class="{% if form.errors contains 'email' %}input-error{% endif %}"
                    placeholder="{{ 'customer.register.email' | t }}"
                    value="{% if form.email %}{{ form.email }}{% endif %}"
                    spellcheck="false"
                    autocomplete="off"
                    autocapitalize="off"
                    required>
            </div>
            <div class="form__field form__field--input">
                <label for="CreatePassword" class="form__label">
                    {{ 'customer.register.password' | t }}
                </label>
                <input type="password"
                    class="form__control form__input"
                    name="customer[password]"
                    id="CreatePassword"
                    class="{% if form.errors contains 'password' %}input-error{% endif %}"
                    placeholder="{{ 'customer.register.password' | t }}"
                    required>
            </div>

            <div class="form__field form__field--checkbox">
                <div id="accepts_marketing_checkbox">
                    <input type="checkbox" name="customer[accepts_marketing]" value="true" id="marketing">
                    <label for="marketing">Yes! Sign me up to receive emails about all the latest news.</label>
                </div>
                <input type="hidden" name="customer[tags]" value="newsletter">                
            </div>


            <input type="submit" value="{{ 'customer.register.submit' | t }}" class="button button--primary form__button">
            <a href="{{ shop.url }}" class="form__cancel-link">{{ 'customer.register.cancel' | t }}</a>

        </div>
    {% endform %}
</div>
